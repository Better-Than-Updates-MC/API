{
  "schemaVersion": 1,
  "id": "beta-networking",
  "version": "${version}",

  "name": "Fabric Beta Networking API",
  "description": "An API useful for sending, receiving and handling packets between the client and server.",
  "authors": [
    "The Cursed Legacy Team",
    "The Better Than Updates Team"
  ],
  "contact": {
    "issues": "https://github.com/Better-Than-Updates-MC/API/issues",
    "sources": "https://github.com/Better-Than-Updates-MC/API"
  },

  "license": "MIT",
  "icon": "assets/api/icon.png",
  
  "entrypoints": {
    "init": [
      "com.halotroop.fabric.impl.networking.NetworkingImpl"
    ]
  },
  
  "mixins": [
    "beta-networking.accessors.json"
  ],

  "depends": {
    "fabricloader": ">=1.0.0",
    "beta-api-base": "*",
    "minecraft": "1.0.0-beta.7.3"
  },
  "breaks": {
    "stationloader": "*",
    "api": "*"
  }
